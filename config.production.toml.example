# Example production config for `/etc/tidal-dl/config.toml`
# Copy this file to `/etc/tidal-dl/config.toml` (or mount it into the container)
# and adjust values as needed. Environment variables override these values
# unless they are not set.

# Where to find templates and static assets (relative to the container)
template_folder = "templates"
static_folder = "static"

# Path to the tidal-dl binary to use (can be an absolute path inside container)
tidal_dl_bin = "/usr/local/bin/tidal-dl-ng"

# Download timeout in seconds (0 = no timeout)
download_timeout = 300

# Optional token required by the HTTP API (set here for cluster-wide secrets)
# If you prefer to inject per-deploy tokens via environment variables, leave
# this unset in the TOML and pass DOWNLOAD_TOKEN at runtime instead.
download_token = "replace-me-with-a-secret"

# Optional: the Flask host/port used when running the app directly. These are
# normally supplied via env vars in Docker, but can be set here as defaults.
flask_host = "0.0.0.0"
flask_port = 5050
